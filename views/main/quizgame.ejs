<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <title>Quiz Game</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
    >
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/stylesheets/quizStyle.css">
</head>
<body class="quiz-page">
<%- include('./header') %>
<audio id="background-music" autoplay loop hidden></audio>
<div class="quiz-box">
    <div class="character-box">
        <p class="char-name">❤️ Frisk</p>
        <div class="health-bar">
            <div id="health-fill"></div>
        </div>
        <p id="hp-text"></p>
    </div>
    <div id="timer-box">Time Left: <span id="timer">30</span>s</div>
    <div id="question-box">
        <div id="play-area"></div>
    </div>
    <div class="mt-4 text-center">
        <button id="next-btn" class="btn btn-primary" disabled>Next</button>
        <div id="result-box" class="mt-3"></div>
        <div id="share-container" class="mt-3" style="display: none;">
            <p>Share your score:</p>
            <button id="share-twitter" class="btn btn-info me-2">
                <i class="bi bi-twitter"></i> Twitter
            </button>
        </div>
    </div>
</div>

<% questions.forEach((q, i) => {
    const choices = [ q.correct_answer, ...q.incorrect_answers ]
            .sort(() => Math.random() - 0.5);
    const letters = ['A','B','C','D'];
    const correctLetter = letters[choices.indexOf(q.correct_answer)];
%>
<template id="q-<%= i %>" data-correct="<%= correctLetter %>">
    <h3><%= i + 1 %>. <%- q.question %></h3>
    <div class="answers">
        <% choices.forEach((choice, idx) => { %>
            <button class="answer" data-letter="<%= letters[idx] %>">
                <%= letters[idx] %>. <%= choice %>
            </button>
        <% }) %>
    </div>
</template>
<% }) %>

<form id="score-form" action="/quizgame/submit" method="POST" style="display:none">
    <input type="hidden" name="score" id="score-input">
</form>

<script src="/scripts/script.js"></script>
<script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
></script>
</body>
</html>